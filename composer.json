{
    "name": "juanchosl/templaterender",
    "description": "A small, lightweight tool in order to render templates ",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/JuanchoSL/TemplateRender",
    "minimum-stability": "dev",
    "keywords": [
        "template"
    ],
    "authors": [
        {
            "name": "Juan SÃ¡nchez Lecegui",
            "email": "JuanchoSL@hotmail.com",
            "homepage": "https://github.com/JuanchoSL/"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "ext-mbstring": "*",
        "ext-fileinfo": "*",
        "juanchosl/datatransfer":"dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "9.6.*",
        "phpstan/phpstan": "1.12.*"
    },
    "autoload": {
        "psr-4": {
            "JuanchoSL\\TemplateRender\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JuanchoSL\\TemplateRender\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit --configuration phpunit.xml tests",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon --xdebug"
    }
}